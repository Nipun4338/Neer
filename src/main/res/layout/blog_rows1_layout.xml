<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="7dp"
    android:elevation="90dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:background="#CCD1D1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/d"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/rent_money"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Money"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/dist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="District"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23dp"/>

        <TextView
            android:id="@+id/areaNamex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Area"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23dp"/>

        <TextView
            android:id="@+id/areasize"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Size on sq feet"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23dp"/>

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Contract"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Additional Description"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/bergain"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Bergainable"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22dp"
            />


        <Button
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#444"
            android:text="Send message"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
