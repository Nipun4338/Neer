<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_my_ad_Activity"
    android:background="@color/hint"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="7dp"
    android:elevation="90dp"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/adredcopiedew"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/post_image1"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/d"
            android:onClick="perform_action"
            android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Tap to change Image"
                android:textSize="18dp"
                android:textStyle="bold"
                />
        </FrameLayout>


        <EditText
            android:id="@+id/rent_money1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rent"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/dist1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="District"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/areaName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Area"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/areasize1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Size on square fits"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Description"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/contact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/bergain1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bergainable"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/edit_ad1"
            android:layout_width="408dp"
            android:layout_height="45dp"
            android:background="@color/green"
            android:text="Update Ad"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/delete_ad"
            android:layout_width="408dp"

            android:layout_height="45dp"
            android:background="#FF0000"
            android:text="Delete Ad"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>