<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="7dp"
    android:elevation="90dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:background="#CCD1D1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:background="@drawable/d"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/rent_money"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Money"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/dist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="District"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="23dp"/>

        <TextView
            android:id="@+id/areaNamex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Area"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23dp"/>

        <TextView
            android:id="@+id/areasize"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Size on sq.feet"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="23dp"/>

        <TextView
            android:id="@+id/contact"
            android:layout_width="381dp"
            android:layout_height="44dp"
            android:text="Contract"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:text="Additional Description"
            android:textColor="@color/black"
            android:textSize="20dp"
             />

        <TextView
            android:id="@+id/bergain"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Bergainable"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/edit_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:text="Edit ad" />

        <Button
            android:id="@+id/check_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/colorAccent"
            android:text="Check messages" />


    </LinearLayout>

</androidx.cardview.widget.CardView>