<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    app:contentPadding="4dp"
    app:cardBackgroundColor="#81C784"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:background="#CCD1D1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:background="@drawable/d"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/rent_money"
            android:layout_width="match_parent"
            android:fontFamily="@font/alegreya_sans_black"
            android:layout_height="44dp"
            android:text="Money"
            android:background="#AED6F1 "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/dist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="District"
            android:background="#85C1E9 "
            android:fontFamily="@font/alegreya_sans_bold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/areaNamex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Area"
            android:background="#5DADE2 "
            android:fontFamily="@font/alegreya_sans_bold"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/areasize"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Size on sq.feet"
            android:background="#3498DB"
            android:fontFamily="@font/alegreya_sans_bold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Contract"
            android:background="#2E86C1 "
            android:fontFamily="@font/alegreya_sans_bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/bergain"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Bergainable"
            android:background="#2874A6 "
            android:fontFamily="@font/alegreya_sans_bold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#21618C"
            android:fontFamily="@font/alegreya_sans_bold"
            android:text="Additional Description"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/edit_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:text="Edit ad" />

        <Button
            android:id="@+id/check_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/colorAccent"
            android:text="Check messages" />


    </LinearLayout>

</androidx.cardview.widget.CardView>